<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.33dp"
        android:layout_marginTop="19.21dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_review_img"
            android:layout_width="34.57dp"
            android:layout_height="34.57dp"
            android:layout_gravity="center_vertical"
            android:src="#f4e7aa" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.64dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_review_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6.09dp"
                android:text="김민승"
                android:textColor="#87000000"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/item_review_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017년 08월 24일 참여"
                android:textColor="#95989A"
                android:textSize="11dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16.33dp"
        android:layout_marginTop="11.52dp"
        android:orientation="horizontal">

        <RatingBar
            android:id="@+id/item_review_rating_bar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:rating="4.5"
            android:theme="@style/RatingBar" />

        <TextView
            android:id="@+id/item_review_short_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.15dp"
            android:text="추천!"
            android:textColor="#95989A"
            android:textSize="11dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_review_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13.45dp"
        android:layout_marginLeft="15.37dp"
        android:layout_marginRight="27.7dp"
        android:layout_marginTop="14.41dp"
        android:lineSpacingExtra="4.1dp"
        android:text="생각보다 너무 즐거웠어요. 농활이라고 해서 일만 많이 하고 지루할 줄알았는데 중간 중간에 쉬는 시간도 새참시간도 너무 즐거웠고 보람 찬 시간이였습니다. 농부님도 너무 친절하셨어요 ~ 다음에 친구랑 다시 방문하기로 했어요 ~ 여기 농활 너무 추천해요! 다들 꼭 가보세요!"
        android:textColor="#87000000"
        android:textSize="13dp" />

    <!--<TextView-->
        <!--android:id="@+id/item_review_images"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--/>-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/review_img_rv"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</LinearLayout>