<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context= ".home.FarmProfile.FarmProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.Guideline
                android:id="@+id/guideline39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.06111111" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_userimage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/farmer_profile1_circleprofile"
                app:layout_constraintStart_toStartOf="@+id/guideline39"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profile_farm_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:text="제주 감귤농장"
                android:textColor="#DE000000"
                android:textSize="17sp"
                app:layout_constraintStart_toEndOf="@+id/profile_userimage"
                app:layout_constraintTop_toTopOf="@+id/profile_userimage"
                android:fontFamily="@font/nanumsquareround_otfb"/>

            <TextView
                android:id="@+id/profile_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="제주특별자치도 서귀포시"
                android:textColor="#8A000000"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@+id/profile_farm_name"
                app:layout_constraintTop_toBottomOf="@+id/profile_farm_name"
                android:fontFamily="@font/nanumsquareround_otfb"/>

            <TextView
                android:id="@+id/farmer_profile_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nanumsquareround_otfb"
                android:text="언제나 여러분들을 환영합니다\n궁금한 점이 있으면 편하게 연락 주세요 ^^~ㅎㅎㅎㅎ \n궁금한 점이 있으면 편하게 연락 주세요 ^^~ㅎㅎㅎㅎ\n궁금한 점이 있으면 편하게 연락 주세요 ^^~ㅎㅎㅎㅎ"
                android:textColor="#8A000000"
                android:lineSpacingExtra="3dp"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline50"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline39"
                app:layout_constraintTop_toBottomOf="@+id/farmer_profile_phone" />

            <TextView
                android:id="@+id/farmer_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="차은우 농부"
                android:textColor="#DE000000"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/guideline39"
                app:layout_constraintTop_toBottomOf="@+id/textView71"
                android:fontFamily="@font/nanumsquareround_otfb"/>

            <TextView
                android:id="@+id/textView71"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="농장주"
                android:textColor="#8A000000"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="@+id/guideline39"
                app:layout_constraintTop_toBottomOf="@+id/profile_userimage"
                android:fontFamily="@font/nanumsquareround_otfb"/>

            <TextView
                android:id="@+id/farmer_profile_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/farmer_profile1_phone"
                android:fontFamily="@font/nanumsquareround_otfb"
                android:text="000 0000 0000"
                android:textAlignment="center"
                android:textColor="#8A000000"
                app:layout_constraintStart_toStartOf="@+id/guideline39"
                app:layout_constraintTop_toBottomOf="@+id/farmer_profile_name" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.94166666" />

        </android.support.constraint.ConstraintLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/profile_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp"
            android:paddingTop="12dp"
            android:background="#F3F3F5">
        </android.support.v7.widget.RecyclerView>


    </LinearLayout>

</ScrollView>

