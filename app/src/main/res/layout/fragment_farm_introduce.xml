    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="참석인원"

        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/friendinfoView_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="농장정보"

        />

    <TextView
        android:id="@+id/farminfo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8dp"
        android:padding="@dimen/activity_search_toolbar_left_padding"
        android:text="사과농장"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/farminfo_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="8dp"
        android:padding="@dimen/activity_search_toolbar_left_padding"
        android:text="사과농장"
        android:textSize="28sp" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/farminfo_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:lineSpacingExtra="8dp"
        android:src="@color/colorAccent"
        android:padding="@dimen/activity_search_toolbar_left_padding"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"/>

    <Button
        android:id="@+id/detail_profile_watch_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="프로필보기"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/scheduleView_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="준비물"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="옷, 간식"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="집결지"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorAccent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="환불규정"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="환불규정 설명"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="연락처"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="연락처관련설명"/>

</LinearLayout>
